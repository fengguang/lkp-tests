pkgname=pixz
pkgver=git
pkgrel=1
arch=('i686' 'x86_64')
url="https://github.com/vasi/pixz.git"
license=('GPL')
source=("https://github.com/vasi/pixz.git")
md5sums=('SKIP')

build() {
	cd "$srcdir/pixz"
	./autogen.sh || return
	./configure --without-manpage || return
	make
}

package() {
	cd "$srcdir/pixz"
	make DESTDIR=$pkgdir install
}
