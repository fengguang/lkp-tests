#!/bin/sh
# - runtime

cd $BENCHMARK_ROOT/qperf || exit

modprobe sctp 2>/dev/null

nr_tests=6
tests="
tcp_bw
tcp_lat
udp_bw
udp_lat
sctp_bw
sctp_lat
"
# rds_bw
# rds_lat

[ -n "$runtime" ] || runtime=600
time=$((runtime / $nr_tests))

[ -z "$server" ] && server=127.0.0.1
server=${server%% *}

cmd ./qperf $server --unify_units --time $time $tests quit
