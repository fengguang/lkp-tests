#!/bin/sh

date=$(date +'%F %T')
echo "$date $@"

args=''
for i in "$@"; do
    # insert a space to avoid conflicting with reserve parameters of echo , such as '-n'
    i=$(echo " $i" | sed 's/^ //' | sed 's/\\/\\\\/g' | sed 's/\"/\\\"/g')
    args="$args \"${i}\""
done

echo "$args" >> $TMP_RESULT_ROOT/reproduce.sh

exec /bin/sh -c "$args"
